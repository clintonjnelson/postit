<%= render 'shared/content_title', title: "Login" %>

<div class='row span6 well' >
  <%= form_tag '/login' do %>
    <%= label_tag          'Username' %>
    <%= text_field_tag     'username' %>

    <%= label_tag          'Password' %>
    <%= password_field_tag 'password' %>

    <br/>
    <%= submit_tag 'Login', class: 'btn btn-primary' %>
  <% end %>
</div>
