<div class='span7 well'>
  <%= form_for @post do |f| %>
    <%= render 'shared/form_errors', object: f.object %>

    <%= f.label       :title %>
    <%= f.text_field  :title %>
    <%= f.label       :url %>
    <%= f.text_field  :url %>
    <%= f.label       :description %>
    <%= f.text_area   :description, rows: 8 %>
    <br/>

    <% @categories.each do |category| %>
      <%= check_box_tag "category_ids[]", category.id %>
      <%= category.name %>
    <% end %>
    <br/>
    <br/>

    <%= f.submit button_name, class: 'btn btn-primary' %>
  <% end %>
</div>
