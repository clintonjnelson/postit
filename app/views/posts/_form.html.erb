<div class='span7 well'>
  <%= form_for @post do |f| %>
    <%= render 'shared/form_errors', object: f.object %>

    <%= f.label       :title %>
    <%= f.text_field  :title %>
    <%= f.label       :url %>
    <%= f.text_field  :url %>
    <%= f.label       :description %>
    <%= f.text_area   :description, rows: 8, class: 'span5' %>
    <br/>

    <%= f.collection_check_boxes :category_ids, @categories, :id, :name do |ckbx|%>
      <%= ckbx.label(class: 'checkbox inline') {ckbx.check_box(class: 'checkbox') + ckbx.text } %>
    <% end %>
    <br/>
    <br/>

    <%= f.submit button_name, class: 'btn btn-primary' %>
  <% end %>
</div>
