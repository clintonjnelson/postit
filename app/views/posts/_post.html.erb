<div class='row'>
  <div class='span1 well'>
    <p>
      (Ajax)Votes
    </p>
  </div>
  <div class='span8 well'>
    <p>
      <%= render post.categories %>
    </p>
    <h4> <%= link_to post.title, post.url %> </h4>
    <p>  <%= post.description             %> </p>

    <!-- Make A _creator_sig.html.erb -->
    <p>
      <span class='quiet'> posted by
        <%= (post.creator.nil? ? "Anonymous" : post.creator.username) %>
      </span>
      <small class='quiet'> at  <%= post.created_at %> </small>
    </p>

    <small>
      <span>
        <%= link_to "#{post.comments.size} comments", post_path(post) %>
      </span>
        |
      <span class='quiet'>
        <%= link_to 'edit post', edit_post_path(post) %>
      </span>
    </small>
  </div>
</div>
