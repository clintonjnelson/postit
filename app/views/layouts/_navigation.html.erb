<ul class="nav">
  <li> <%= link_to "Postit!", root_path, :class => 'brand' %> </li>
  <% if logged_in? %>
    <li> <%= link_to 'New Post', new_post_path %> </li>
  <% end %>
  <li>
    <div class='btn-group nav_item' id='navcatdropdown'>
      <a class='btn btn-small dropdown-toggle' data-toggle='dropdown' href="#">
        Categories
        <i class='caret'></i>
      </a>
      <ul class='dropdown-menu'>
        <% @categories.each do |category| %>
          <li> <%= link_to category.name, category_path(category) %> </li>
        <% end %>
        <% if logged_in? %>
          <li class='divider'></li>
          <li>
            <%= link_to(new_category_path) do %>
              <i class='icon-plus'></i>
              New Category
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </li>

  <% if !logged_in? %>
    <li>
      <div class:'nav_item'>
        <%= link_to 'Register', register_path, class: 'btn btn-small btn-success' %>
      </div>
    </li>
    <li>
      <div class='nav_item'>
        <%= link_to 'Login', login_path, class: 'btn btn-small' %>
      </div>
    </li>

  <% else #logged in%>
    <li>
      <div class='btn-group nav_item' id='navuserdropdown'>
        <a class='btn btn-small dropdown-toggle' data-toggle='dropdown' href="#">
          <%= current_user.username %>
          <i class='caret'></i>
        </a>
        <ul class='dropdown-menu'>
          <li>
            <%= link_to edit_user_path(current_user) do %>
              <i class="icon-pencil"></i>
              <span>edit profile</span>
            <% end %>
          </li>
          <li>
            <%= link_to user_path(current_user) do %>
              <i class='icon-user'></i>
              <span>view profile </span>
            <% end %>
          </li>
          <li>
            <%= link_to logout_path do %>
            <i class='icon-off'></i>
            <span>logout</span>
            <% end %>
          </li>
        </ul>
      </div>
    </li>
  <% end %>
</ul>

